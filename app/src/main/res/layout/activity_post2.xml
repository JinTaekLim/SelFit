<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    tools:context=".PostActivity">

    <!-- 상단 레이아웃 -->
    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- 왼쪽에 Selfit TextView -->
        <TextView
            android:id="@+id/selfitTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selfit"
            android:textSize="24sp" />

        <!-- 오른쪽에 메뉴 아이콘 (ActionBar에서 처리) -->
    </LinearLayout>

    <!-- 스크롤 가능한 영역 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topLayout">

        <!-- 게시글 내용을 담을 LinearLayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 프로필 사진 -->
            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/sjg__" />

            <!-- 이름 -->
            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe" />

            <!-- 게시글 카드뷰 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- 게시글 제목 -->
                    <TextView
                        android:id="@+id/postTitleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="게시글 제목"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- 게시글 사진 -->
                    <ImageView
                        android:id="@+id/postImageView"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/test2" />

                    <!-- 게시글 내용 -->
                    <TextView
                        android:id="@+id/postContentTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="게시글 내용" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 기타 내용 추가 -->

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="566dp"
        android:orientation="vertical"
        android:padding="0dp">
        <!-- EditText를 RelativeLayout 안에 추가 -->
        <ImageView
            android:id="@+id/navi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/navigation" />

        <EditText
            android:id="@+id/otherEditText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="10dp"
            android:hint="기타 내용 입력" />
    </LinearLayout>


</RelativeLayout>
